{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist-api",
    "rootDir": "./api",
    "types": ["node"],
    "declaration": false,
    "sourceMap": false
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}

