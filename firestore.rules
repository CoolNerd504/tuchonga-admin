rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Products - public read, authenticated write
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Services - public read, authenticated write
    match /services/{serviceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Categories - public read, authenticated write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reviews - public read, authenticated write
    match /reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Comments - public read, authenticated write
    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users - authenticated read/write
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Staff - authenticated read/write
    match /staff/{staffId} {
      allow read, write: if request.auth != null;
    }

    // Businesses - authenticated read/write
    match /businesses/{businessId} {
      allow read, write: if request.auth != null;
    }

    // All other collections - authenticated users have full read/write access
    // This catch-all rule covers all mobile app collections and admin collections
    // including: quickRatings, surveyResponses, surveyTemplates, commentReactions, etc.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}